<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Feedback</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #eef2f7;
            margin: 0;
            padding: 0;
            color: #333;
        }

        h2 {
            text-align: center;
            margin-top: 20px;
            color: #4a90e2;
            font-size: 2rem;
        }

        .feedback-container {
            width: 90%;
            max-width: 800px;
            margin: 30px auto;
            background-color: #fff;
            border-radius: 10px;
            padding: 20px 30px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .feedback-item {
            border-bottom: 1px solid #ddd;
            padding: 15px 0;
            display: flex;
            flex-direction: column;
            gap: 5px;
        }

        .feedback-item:last-child {
            border-bottom: none;
        }

        .feedback-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .feedback-header strong {
            font-size: 1.1rem;
        }

        .rating {
            background-color: #f5a623;
            color: white;
            font-weight: bold;
            padding: 5px 10px;
            border-radius: 20px;
        }

        .feedback-text {
            font-size: 1rem;
            color: #555;
            margin-top: 5px;
            line-height: 1.5;
        }

        .feedback-footer {
            text-align: right;
            color: #888;
            font-size: 0.9rem;
        }

        .no-feedback {
            text-align: center;
            font-size: 1.1rem;
            color: #888;
            padding: 20px;
        }
        .cancel-icon {
            position: absolute;
            top: 15px;
            right: 15px;
            font-size: 1.5rem;
            color: #888;
            cursor: pointer;
            transition: color 0.3s ease;
        }

        .cancel-icon:hover {
            color: #ff0000;
        }

    </style>
</head>
<body>
    <h2>Feedback for Employee</h2>
    <div class="feedback-container">
        <div class="cancel-icon" onclick="window.location.href='/admin/dashboard'">&#10006;</div>
        <% if (feedbacks.length > 0) { %>
            <% feedbacks.forEach(feedback => { %>
                <div class="feedback-item">
                    <div class="feedback-header">
                        <strong>Employee ID: <%= feedback.emp_id %></strong>
                        <span class="rating"><%= feedback.rating %> / 5</span>
                    </div>
                    <div class="feedback-text">
                        <strong>Feedback:</strong> <%= feedback.feedbackText %>
                    </div>
                    <div class="feedback-footer">
                        Submitted by <%= feedback.customerName %> on <%= feedback.date.toDateString() %>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="no-feedback">No feedback available for this employee.</div>
        <% } %>
    </div>
</body>
</html>
