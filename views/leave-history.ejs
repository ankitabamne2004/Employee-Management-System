<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Leave History</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #cee4f0;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        table {
            width: 90%;
            margin: 20px auto;
            border-collapse: collapse;
            box-shadow: 0 5px 10px rgba(0,0,0,0.15);
        }

        thead {
            background-color: #295a69;
            color: #fff;
        }

        thead th {
            padding: 10px;
            text-align: left;
        }

        tbody td {
            padding: 12px 15px;
            border: 1px solid #ddd;
            text-align: left;
            background-color: #eee;
        }

        tbody tr:hover {
            background-color: #ffff;
        }

        .cancel-btn {
            display: block;
            width: fit-content;
            margin: 20px auto;
            background-color: #ccc;
            color: black;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
        }

        .cancel-btn:hover {
            background-color: #999;
        }

        /* Classification Diagram Styling */
        .diagram-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            margin: 40px auto;
            gap: 20px;
            max-width: 900px;
        }

        .diagram-card {
            width: 200px;
            text-align: center;
            padding: 15px;
            border-radius: 10px;
            background: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .circle {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            margin: 10px auto;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 14px;
            font-weight: bold;
        }

        .accepted {
            border: 6px solid #4caf50; /* Green for Accepted */
            color: #4caf50;
        }

        .rejected {
            border: 6px solid #f44336; /* Red for Rejected */
            color: #f44336;
        }
    </style>
</head>
<body>
    <h1>Leave History</h1>
    <table>
        <thead>
            <tr>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Number of Days</th>
                <th>Leave Type</th>
                <th>Reason</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <% leaveHistory.forEach(leave => { %>
                <tr>
                    <td><%= leave.startDate.toDateString() %></td>
                    <td><%= leave.endDate.toDateString() %></td>
                    <td><%= leave.numberOfDays %></td>
                    <td><%= leave.leaveType %></td>
                    <td><%= leave.otherReason ? leave.otherReason : leave.leaveType %></td>
                    <td><%= leave.status %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    
    <!-- Cancel Button -->
    <a href="/employee/dashboard/<%= emp_id %>" class="cancel-btn">Cancel</a>
      
</body>
  
</html>
