<!DOCTYPE html>
<html>
<head>
  <title>Monthly Attendance Calendar</title>
  <link rel="stylesheet" type="text/css" href="/css/admin.css">

  <style>
     body {
      background-color: #D1E9F6;
      font-family: Arial, sans-serif;
      color: #326273;
      margin: 0;
      padding: 20px;
       display: flex;
      flex-direction: row;
    } 
    .content {
      flex: 1;
      padding: 20px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    h1 {
      text-align: center;
      color: #326273;
      margin-bottom: 20px;
    }

    .monthly-calendar {
      display: grid;
      grid-template-columns: repeat(7, 1fr);
      gap: 10px;
      max-width: 600px;
      margin: 0 auto;
      padding: 20px;
      background-color: #f9f9f9;
      border: 1px solid #ccc;
      border-radius: 10px;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    .day {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 40px;
      height: 40px;
      border-radius: 5px;
      background-color: #e3f2f9;
      border: 1px solid #5c9ead;
      transition: background-color 0.3s ease;
    }

    .day a {
      text-decoration: none;
      color: #326273;
      font-weight: bold;
      font-size: 18px;
      display: block;
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: color 0.3s ease;
    }

    .day a:hover {
      color: #fff;
      background-color: #5c9ead;
      border-radius: 5px;
    }

    
       .monthly-calendar {
        grid-template-columns: repeat(7, 1fr); 
        max-width: 100%;
      }
      .back-button {
      background-color: gray;
      color: white;
      font-size: 14px;
      padding: 10px 15px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      text-decoration: none;
      margin-top: 20px;
    }

    .back-button:hover {
      background-color: #4e4e4e;
    }


    @media (max-width: 480px) {
      .monthly-calendar {
        grid-template-columns: repeat(2, 1fr); 
        gap: 5px;
      }
    }  
      </style>
</head>
<body>
    <%- include('navbar.ejs') %>
  <div class="content">
  <h1>Attendance for <%= new Date(year, month - 1).toLocaleString('default', { month: 'long' }) %> <%= year %></h1>
  <div class="monthly-calendar">
    <% let daysInMonth = new Date(year, month, 0).getDate(); %>
    <% for(let day = 1; day <= daysInMonth; day++) { %>
      <div class="day">
        <a href="/attendance/<%= year %>/<%= month %>/<%= day %>">
          <%= day %>
        </a>
      </div>
    <% } %>
  </div>
  <a href="/admin/Attendance" class="back-button">Back </a>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
        const sidebar = document.querySelector('.sidebar');
        const toggleSidebarButton = document.getElementById('toggleSidebar');
        const loginInfo = document.getElementById('loginInfo');

        // Toggle sidebar
        toggleSidebarButton.addEventListener('click', () => {
            sidebar.classList.toggle('closed');
            if (sidebar.classList.contains('closed')) {
                toggleSidebarButton.textContent = '☰'; // Show the open icon
                toggleSidebarButton.style.opacity = "0"                   
            } else {

                toggleSidebarButton.textContent = '☰'; // Show the close icon
            }
        });
        toggleSidebarButton.addEventListener("mouseover",() =>{
        toggleSidebarButton.style.opacity = "1"

    });
  });
  </script>
</body>
</html>